<% content_for(:title, '設定の項目を追加') %>
<% content_for(:body_class, 'setting') %>
<% content_for(:body_id, 'new') %>

<h1>設定項目追加</h1>

<%= form_for @setting, class: '' do |f| %>
    
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group">
    <%= f.label :label, '項目名' %>
    <%= f.text_field :label, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :slug, 'スラッグ' %>
    <%= f.text_field :slug, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :content, '値' %>
    <%= f.text_area :content, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  
<% end %>

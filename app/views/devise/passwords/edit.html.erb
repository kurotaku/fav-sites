<% content_for(:title, 'パスワード変更') %>
<% content_for(:body_class, 'user') %>
<% content_for(:body_id, 'edit_password') %>

<h1 class="text-center">パスワード変更</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-6">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'mb-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で設定してください。)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード再入力" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit "パスワード変更", class: 'btn btn-secondary btn-block' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
</div>

<% content_for(:title, 'ユーザー登録') %>
<% content_for(:body_class, 'user') %>
<% content_for(:body_id, 'new') %>

<h1 class="text-center">ユーザー登録</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-6">

    <%= form_for resource, as: resource_name, url: registration_path(resource_name),html: {class: 'mb-3'} do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上で設定してください。)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード再入力' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
      
      <%= f.submit 'ユーザー登録', class: 'btn btn-secondary btn-block' %>
      <%# if controller.controller_path == 'devise/registrations' && controller.action_name == 'new' %>
      <%# end %>
    
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
</div>
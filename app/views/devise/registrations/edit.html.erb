<% content_for(:title, 'アカウント情報変更') %>
<% content_for(:body_class, 'user') %>
<% content_for(:body_id, 'edit') %>

<h1 class="text-center">アカウント情報変更</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-6">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'mb-5' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :current_password, '現在のパスワード' %> <i>(パスワードを変更しない場合も入力してください)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password, '新しいパスワード' %> <i>(変更しない場合は空欄にしてください)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %>文字以内で設定してください</em>
        <% end %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, '新しいパスワード再入力' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    
      
    
      <%= f.submit '変更', class: 'btn btn-secondary btn-block' %>
      
    <% end %>

  </div>
</div>

<h1 class="text-center">退会</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会してもよろしいですか？" }, method: :delete, class: 'btn btn-danger btn-block mb-3' %>
    <%= link_to "戻る", :back %>
  </div>
</div>

